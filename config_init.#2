sbit NCS		= P0^4;		
sbit MOTION		= P0^5;		
sbit EE_NCS		= P0^6;				
//sbit GND2		= P0^7;		

sbit ZB			= P1^0;		
sbit ZA			= P1^1;		
sbit LEFT_SW	= P1^2;		
sbit RIGHT_SW	= P1^3;		
sbit MID_SW		= P1^4;		
sbit CPI_P		= P1^5;		
sbit CPI_M		= P1^6;		
//sbit GND3 = P1^7;		

sbit LED_BIT2	= P2^0;		
sbit LED_BIT1	= P2^1;		
sbit LED_BIT0	= P2^2;		
//sbit GND4		= P2^3;		
//sbit GND5		= P2^4;		
//sbit GND6		= P2^5;
//sbit GND7		= P2^6;
//sbit GND8		= P2^7;

#define LED_HB LED_BIT2


//------------------------------------------------------------------------------------
// Union Define
//------------------------------------------------------------------------------------
typedef union
{
	unsigned long dw;
	unsigned int w[2];
	unsigned char b[4];
}U32;

typedef union
{
	unsigned int w;
	unsigned char b[2];
}U16;

typedef union
{
	signed long dw;
	unsigned int w[2];
	unsigned char b[4];
}S32;

typedef union
{
	signed int w;
	unsigned char b[2];
}S16;


